  <br><br><br>
    <div class="s006">
      <form method="POST" action="/searchPage"  >
        <fieldset>
          <legend style="color:black" >What are you looking for?</legend>
          <div class="inner-form">
            <div class="input-field">
              <button class="btn-search" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                  <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                </svg>
              </button>
              <input id="search" type="text" style="background-color:black" name="title" placeholder="search here .." />
            </div>
          </div>
          <div class="suggestion-wrap">
            <span>lamborghini</span>
            <span>aventador</span>
            <span>400 GT</span>
            <span>Miura</span>
          </div>
        </fieldset>
      </form>
    </div>

  <br>
  <div class="products">
    <div class="container">
      <div class="row">
        <button type="button" class="btn btn-success" style="margin-bottom: 20px;" data-toggle="modal" data-target="#exampleModal">
          My cart
        </button>
        
        <!-- Modal --> 
        <div class="modal fade" id="exampleModal" tabindex="5" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Rente Cars</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>&nbsp;</th>
                    
                    
                  </tr>
                  </thead>
                  <tbody>
                    <% var i = 0 %>
                <% for (let car of verif ) { %>
                  <tr>
                    <%  i = i + 1 %>
                    <td>00<%= i %></td>
                    <td><%= car.carTitle %></td>
                    
                    <td><img src="/uploads/<%= car.carImage %>" width="85px" height="45px"/></td>
                    
                  <td>
                    <a href="#" >
                      <div class="btn btn-danger">Delete</div>
                    </a>
                  </td>
                  </tr>
                <% } %> 
                  </tbody>
                  <tfoot>
                
                  </tfoot>
                </table>
              </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="filters-content">
              <div class="row grid">
                <% for(let Product of Products) { %>
                  <div class="col-lg-4 col-md-4 all des">
                    <div class="product-item">
                      <a href="/Details/<%= Product._id %>"><img style="height:270px" src="uploads/<%= Product.image %>" alt=""></a>
                      <br>
                      <div class="down-content">
                        <a href="/Details/<%= Product._id %>"><h4><%= Product.title %></h4></a>
                        <h6>$<%= Product.price %></h6>
                        <div>Rente price : $<%= Product.rente %> per Day</div>
                        <p>Lorem ipsume dolor sit amet, adipisicing elite. Itaque, corporis nulla aspernatur.</p>
                        <ul class="stars">
                          <li><i class="fa fa-star"></i></li>
                          <li><i class="fa fa-star"></i></li>
                          <li><i class="fa fa-star"></i></li>
                          <li><i class="fa fa-star"></i></li>
                          <li><i class="fa fa-star"></i></li>
                        </ul>
                        <span>Reviews (12)</span>
                      </div>
                    </div>
                  </div>
                  <% } %>
              </div>
          </div>
        </div>
        <div class="col-md-8">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
              </li>
              <li class="page-item" class ="active" ><a  class="page-link" href="/allProducts?page=1&limit=9">1</a></li>
              <li class="page-item"><a class="page-link" href="/allProducts?page=2&limit=9">2</a></li>
              <li class="page-item"><a class="page-link" href="/allProducts?page=3&limit=9">3</a></li>
              <li class="page-item">
                <a class="page-link" href="">Next</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

