
<%- include('navbar.ejs') %>
<%- include('sidebar.ejs') %>



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>DataContacts</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">DataContacts</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              
              

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">DataContacts with default features</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
               <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>&nbsp;</th>
                  </tr>
                  </thead>
                  <tbody>

                 <% for (let contact of contacts ) { %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.subject %></td>
                    <td><%= contact.message %></td>
                    <td>
                        <a href="/contactsTable/delete/<%= contact._id %>" >
                          <div class="btn btn-danger">Delete</div>
                        </a>
                    
                    </td>
                  </tr>
                <% } %> 
                
                   
                  </tbody>
                  <tfoot>
                
                  </tfoot>
                </table>
               </div> 
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>


  <%- include('footer.ejs') %>